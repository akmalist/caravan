
<% include ../partials/header %>

<h1>Edit page </h1>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit
      <%= car.name %>
    </h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="car[name]" value="<%= car.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="car[price]" value="<%= car.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="car[image]" value="<%= car.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="car[description]" value="<%= car.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/cars">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
